{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "db/migrations/migrations.js",
    "nativewind-env.d.ts"
  ]
}
